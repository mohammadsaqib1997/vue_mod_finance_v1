    body
        .bg-offwhite
            #container.wrap-content.container-fluid
                    section#page-title
                        .row
                            .col-md-2.border-right(style='border-color: #aeaeae;')
                                img(src='http://localhost:3000/assets/images/logo.png', style='width: 100%;max-width:230px;')
                            .col-sm-8
                                h1.mainTitle(style='font-size: 38.02px;') M.I.S REPORTS
                                span.mainDescription(style='font-size: 19px;color: #ec5d58;') DETAILED LEDGER
            .row.padding-30
                .col-md-12
                    .panel.panel-white.no-radius
                        .panel-heading.border-bottom.border-left.border-yellow.no-padding.no-line-height.no-min-height
                            h4.panel-title.pull-left.padding-15 Project Name: #{proName}
                            h6.pull-right.text-right.padding-15 Create Date: #{date}
                        .panel-body.padding-30
                            table.table.table-striped.misreport(cellpadding='5' style='width:100%;' border=1)
                                tr.background-e2e8f0.no-border
                                    th Date
                                    th(colspan=4)
                                    th Debit
                                    th Credit
                                    th Balance
                                    th
                                tr.background-e3e3e3
                                    td 04/05/2017
                                    td(colspan=3) Cash In Hand
                                    td.text-bold Balance
                                    td 592,000.00
                                    td 0.00
                                    td 592,000.00
                                    td dr
                                - var bal = 0
                                each item in data
                                    tr
                                        td(style="width:40px;") #{item.date}
                                        td #{item.type.toUpperCase()}
                                        td #{item.v_id}
                                        td #{item.remarks}
                                        td
                                        td #{item.debit}
                                        td #{item.credit}
                                        td #{bal += item.debit-item.credit}
                                        td #{(bal >= 0) ? "Dr": "Cr"}
                                tr.no-border
                                    td(colspan=5)
                                    td.background-e6e6e6 #{totDr}
                                    td.background-e6e6e6 #{totCr}
                                    td(colspan=2)
                            button.btn.btn-danger.btn-l.btn-dark-Red.text-uppercase(type='button' style="margin-right:20px;") Save
                            button.btn.btn-dark-black.btn-lg.text-uppercase(type='button') Print





