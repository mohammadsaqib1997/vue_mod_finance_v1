#container.wrap-content.container
    section#page-title
        .row
            .col-sm-8
                h1.mainTitle User Control
                span.mainDescription Profile
            ol.breadcrumb
                li
                    span User Control
                li.active
                    span Profile
    .container-fluid.container-fullw.bg-offwhite.create-user
        div.text-center(v-if='dataLoad2')
            i.fa.fa-refresh.fa-spin.fa-fw.fa-3x
        form(v-else)
            .panel.panel-white.no-radius
                .panel-heading.border-bottom.border-left.border-yellow.no-padding.no-line-height.no-min-height
                    h4.panel-title.pull-left.padding-15 Edit User Details
                .panel-body
                    .row
                        .col-md-12
                            h3.p_subheading Account Info
                    .row
                        .col-md-12(v-if='errMain !== "" || sucMain !== ""')
                            p.alert.alert-danger(v-if="errMain !== ''") {{ errMain }}
                            p.alert.alert-success(v-if="sucMain !== ''") {{ sucMain }}
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | First Name
                                .col-md-9
                                    input.form-control(type='text', placeholder='Peter' v-model='first_name')
                                    p.text-danger.text-right(v-if='validation.hasError("first_name")') {{ validation.firstError('first_name') }}
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | Last Name
                                .col-md-9
                                    input.form-control(type='text', placeholder='Clark' v-model='last_name')
                                    p.text-danger.text-right(v-if='validation.hasError("last_name")') {{ validation.firstError('last_name') }}
                    .row
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | Gender
                                .col-md-9
                                    .clip-radio.radio-primary
                                        input#us-female(type='radio', value='Female', v-model='gender')
                                        label(for='us-female' style="float: left; width: auto;")
                                            | Female
                                        input#us-male(type='radio', value='Male', v-model='gender')
                                        label(for='us-male' style="float: left; width: auto;")
                                            | Male
                                        p.text-danger.text-right(v-if='validation.hasError("gender")') {{ validation.firstError('gender') }}
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | Email Address
                                .col-md-9
                                    input.form-control(type='email', placeholder='peter@example.com' v-model='email')
                                    p.text-danger.text-right(v-if='validation.hasError("email")') {{ validation.firstError('email') }}
                                    .text-right(v-if='validation.isValidating("email")')
                                        i.fa.fa-spinner.fa-spin
                    .row
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | New Password
                                .col-md-9
                                    input.form-control(type='password', placeholder='New Password' v-model='password')
                                    p.text-danger.text-right(v-if='validation.hasError("password")') {{ validation.firstError('password') }}
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | Confirm Password
                                .col-md-9
                                    input.form-control(type='password', placeholder='Re-Type Password' v-model='retype_password')
                                    p.text-danger.text-right(v-if='validation.hasError("retype_password")') {{ validation.firstError('retype_password') }}
                    .row
                        .col-md-6
                            com_cities(ref='sel_city')
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | Zip Code
                                .col-md-9
                                    input.form-control(placeholder='123456', type='text', v-model='zipcode')
                                    p.text-danger.text-right(v-if='validation.hasError("zipcode")') {{ validation.firstError('zipcode') }}

                    .row
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label.control-label
                                        | Phone/Mobile
                                .col-md-9
                                    input.form-control.input-mask-phone(type='text', placeholder='Phone/Mobile' v-model='mob_num')
                                    p.text-danger.text-right(v-if='validation.hasError("mob_num")') {{ validation.firstError('mob_num') }}
                            .form-group
                                .col-md-3
                                    label
                                        | Image Upload
                                .col-md-9
                                    div.text-center(v-if='loadImg')
                                        i.fa.fa-refresh.fa-spin.fa-fw.fa-2x
                                    .fileinput.fileinput-new(v-else data-provides='fileinput')
                                        .fileinput-new.thumbnail
                                            img(v-bind:src='profile_img_src', alt='Profile Image')
                                        button.btn.btn-primary(v-if="fileLoader" type='button' disabled='disabled')
                                            i.fa.fa-refresh.fa-spin.fa-fw
                                        .user-edit-image-buttons(v-else)
                                            span.btn.btn-o.btn-red.btn-file
                                                span.fileinput-new
                                                    i.fa.fa-picture
                                                    |  Select image
                                                input(type='file' id="profile_img")
                        .col-md-6
                            .form-group
                                .col-md-3
                                    label
                                        | Project
                                .col-md-9
                                    .clip-radio.radio-primary
                                        input#pro_sel(type='radio', value='Select', v-model='pro_sel_type')
                                        label(for='pro_sel')
                                            | Select Project
                                        input#pro_all(type='radio', value='All', v-model='pro_sel_type')
                                        label(for='pro_all')
                                            | All Project
                                    template(v-if='pro_sel_type === "Select"')
                                        div.text-center(v-if='dataLoad1')
                                            i.fa.fa-refresh.fa-spin.fa-fw.fa-2x
                                        template(v-else)
                                            select.form-control(v-model='sel_project' multiple)
                                                option(v-for='(row, key, ind) in proData' v-bind:value='key') {{ row.name }}
                                            p.text-danger.text-right(v-if='validation.hasError("sel_project")') {{ validation.firstError('sel_project') }}

                    .row
                        .col-md-4.pull-left
                            button.btn.btn-primary.pull-left(v-if="inProcess" type='button' disabled='disabled')
                                i.fa.fa-refresh.fa-spin.fa-fw
                            button.btn.btn-primary.pull-left(v-else type='button' v-on:click.prevent='updateUser')
                                | Update

