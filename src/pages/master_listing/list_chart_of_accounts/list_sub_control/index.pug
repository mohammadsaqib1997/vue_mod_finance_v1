#container.wrap-content.container
    section#page-title
        .row
            .col-sm-8
                h1.mainTitle Master Listing
                span.mainDescription List: Chart Of Account
            ol.breadcrumb
                li
                    span Master Listing
                li
                    span List: Chart Of Account
                li.active
                    span Sub Control
    .container-fluid.container-fullw.bg-white
        .row
            .col-md-12
                h2 Master Listing / List: Chart Of Account / Sub Control
                .row
                    .col-md-12
                        .form-group
                            .row
                                .col-md-6
                                    label Project
                                    select#control_name.form-control(name='project')
                                        option(value='01') Project 1
                                        option(value='02') Project 2
                .row
                    .col-md-12
                        .form-group
                            .row
                                .col-md-6
                                    label Starting Sub Control
                                    select#control_name.form-control(name='start_subcontrol')
                                        option(value='01') 0001 Sub Control
                                        option(value='02') 0002 Sub Control
                .row
                    .col-md-12
                        .form-group
                            .row
                                .col-md-6
                                    label Ending Sub Control
                                    select#control_name.form-control(name='end_subcontrol')
                                        option(value='01') 0001 Sub Control
                                        option(value='02') 0002 Sub Control
                .row
                    .col-md-12
                        .form-group
                            .row
                                .col-md-6
                                    label Destination
                                    select#control_name.form-control(name='saveaction')
                                        option(value='01') Screen
                                        option(value='02') File
                .row
                    .col-md-4.pull-right
                        button.btn.btn-lg.btn-primary.btn-wide.pull-right(type='submit')
                            | Submit
                            i.fa.fa-arrow-circle-right
