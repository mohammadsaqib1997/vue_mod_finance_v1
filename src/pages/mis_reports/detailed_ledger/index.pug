#container.wrap-content.container.detail_ledger.msi_reports
    section#page-title
        .row
            .col-xs-12.col-sm-12.col-md-8.col-lg-8
                h1.mainTitle MIS Reports
                span.mainDescription Detailed Ledger
            ol.breadcrumb
                li
                    span MIS Reports
                li.active
                    span Detailed Ledger
    .container-fluid.container-fullw.bg-offwhite
        .row
            .col-xs-12.col-sm-12.col-md-12.col-lg-12
                form(v-on:submit.prevent='showSheet')
                    .panel.panel-white.no-radius
                        .panel-heading.border-bottom.border-left.border-yellow.no-padding.no-line-height.no-min-height
                            h4.panel-title.pull-left.padding-15 MIS Reports / Detailed Ledger
                        .panel-body
                            .row
                                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                                    .text-center(v-if='dataLoad1')
                                        i.fa.fa-refresh.fa-spin.fa-fw.fa-2x
                                    template(v-else='v-else')
                                        .form-group
                                            label Project
                                            select.form-control(name='sel_project', v-model='sel_project')
                                                option(value='') Select Project
                                                option(v-for='(row, key, ind) in proData', v-bind:value='key') {{ row.name }}
                                            p.text-danger.text-right(v-if='validation.hasError("sel_project")') {{ validation.firstError('sel_project') }}
                            .row
                                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                                    .text-center(v-if='dataLoad2')
                                        i.fa.fa-refresh.fa-spin.fa-fw.fa-2x
                                    template(v-else='v-else')
                                        .form-group
                                            label Subsidiary
                                            select.form-control(name='sel_subsidiary', v-model='sel_subsidiary')
                                                option(value='') Select Subsidiary
                                                option(v-for='(row, key, ind) in regSubsData', v-bind:value='key') {{ row.name }}
                                            p.text-danger.text-right(v-if='validation.hasError("sel_subsidiary")') {{ validation.firstError('sel_subsidiary') }}
                            .row
                                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                                    .form-group
                                        label Start Date
                                        .input-group.date
                                            input.form-control.datepicker.start_date(type='text', name='start_date', placeholder='Enter your Starting Date')
                                            p.text-danger.text-right(v-if='validation.hasError("start_date")') {{ validation.firstError('start_date') }}
                            .row
                                .col-xs-12.col-sm-12.col-md-6.col-lg-6
                                    .form-group
                                        label End Date
                                        .input-group.date
                                            input.form-control.datepicker.end_date(type='text', name='end_date', placeholder='Enter your Ending Date')
                                            p.text-danger.text-right(v-if='validation.hasError("end_date")') {{ validation.firstError('end_date') }}
                            .row
                                .col-xs-12.col-sm-12.col-md-12.col-lg-12
                                    .form-group
                                        .row
                                            .col-xs-12.col-sm-12.col-md-6.col-lg-6
                                                label Destination
                                                select.form-control(v-model='sel_show_type')
                                                    option(value='Screen') Screen
                                                    option(value='File') File
                                                p.text-danger.text-right(v-if='validation.hasError("sel_show_type")') {{ validation.firstError('sel_show_type') }}
                            .row
                                .col-xs-12.col-sm-12.col-md-4.col-lg-4.pull-left
                                    button.btn.btn-lg.btn-primary.btn-wide.pull-left(type='submit')
                                        | SubmitÂ 
                                        i.fa.fa-arrow-circle-right
