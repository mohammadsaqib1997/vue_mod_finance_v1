                                span Balance Sheet
                                i.icon-arrow
                            ul.sub-menu
                                li(v-bind:class="(this.$route.path === '/balance_sheet/list_control') ? 'active': ''")
                                    router-link(to="/balance_sheet/list_control") Control
                                li
                                    a(href='#') Sub Control
                                li
                                    a(href='#') Subsidiary
                        li(v-bind:class="(this.$route.path === '/detailed_ledger') ? 'active': ''")
                            router-link(to='/detailed_ledger')
                                span Detailed Ledger
                li(v-if="admin" v-bind:class="(this.$route.path === '/create_new_user') ? 'active': ''")
                    a(href='javascript:void(0)')
                        .item-content
                            .item-media
                                img.icon-media(src='/assets/images/icons/user.png')
                            .item-inner
                                span.title User Control
                                i.icon-arrow
                    ul.sub-menu
                        li(v-bind:class="(this.$route.path === '/create_new_user') ? 'active': ''")
                            router-link(to='/create_new_user')
                                span Create New User
                li
                    a(href='javascript:void(0)')
                        .item-content
                            .item-media
                                img.icon-media(src='/assets/images/icons/logout.png')
                            .item-inner
                                span.title(v-on:click.prevent='logout') Logout
