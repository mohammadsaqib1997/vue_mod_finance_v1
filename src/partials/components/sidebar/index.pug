#sidebar.sidebar.app-aside
    .sidebar-container.perfect-scrollbar
        nav
            .search-form.ng-scope
                a.s-open(href='#')
                    i.ti-search
                form.navbar-form.ng-pristine.ng-valid(role='search')
                    a.s-remove(href='#', target='.navbar-form')
                        i.ti-close
                    .form-group
                        input.form-control(type='text', placeholder='Search...')
                        button.btn.search-button(type='submit')
                            i.ti-search
            .navbar-title
                span Main Navigation
            ul.main-navigation-menu
                li(v-bind:class="(this.$route.path === '/') ? 'active': ''")
                    router-link(to='/')
                        .item-content
                            .item-media
                                i.ti-home
                            .item-inner
                                span.title Dashboard
                li(v-bind:class="(this.$route.path === '/create_control' || this.$route.path === '/create_sub_control' || this.$route.path === '/create_subsidiary' || this.$route.path === '/master_details') ? 'active open': ''")
                    a(href='javascript:void(0)')
                        .item-content
                            .item-media
                                img.icon-media(src='/assets/images/icons/masterFiles.png')
                            .item-inner
                                span.title Master Files
                                i.icon-arrow
                    ul.sub-menu
                        li(v-bind:class="(this.$route.path === '/create_control' || this.$route.path === '/create_sub_control' || this.$route.path === '/create_subsidiary') ? 'active open': ''")
                            a(href='javascript:;')
                                span Chart of Accounts
                                i.icon-arrow
                            ul.sub-menu
                                li(v-bind:class="(this.$route.path === '/create_control') ? 'active': ''")
                                    router-link(to='/create_control') Control
                                li(v-bind:class="(this.$route.path === '/create_sub_control') ? 'active': ''")
                                    router-link(to='/create_sub_control') Sub Control
                                li(v-bind:class="(this.$route.path === '/create_subsidiary') ? 'active': ''")
                                    router-link(to='/create_subsidiary') Subsidiary
                        li(v-bind:class="(this.$route.path === '/master_details') ? 'active': ''")
                            router-link(to='/master_details')
                                span Master Detail
                li(v-bind:class="(this.$route.path === '/listing_control' || this.$route.path === '/listing_sub_control' || this.$route.path === '/listing_subsidiary') ? 'active open': ''")
                    a(href='javascript:void(0)')
                        .item-content
                            .item-media
                                img.icon-media(src='/assets/images/icons/masterListings.png')
                            .item-inner
                                span.title Master Listing
                                i.icon-arrow
                    ul.sub-menu
                        li(v-bind:class="(this.$route.path === '/listing_control' || this.$route.path === '/listing_sub_control' || this.$route.path === '/listing_subsidiary') ? 'active open': ''")
                            a(href='javascript:;')
                                span List: Chart of Accounts
                                i.icon-arrow
                            ul.sub-menu
                                li(v-bind:class="(this.$route.path === '/listing_control') ? 'active': ''")
                                    router-link(to='/listing_control') Control
                                li(v-bind:class="(this.$route.path === '/listing_sub_control') ? 'active': ''")
                                    router-link(to='/listing_sub_control') Sub Control
                                li(v-bind:class="(this.$route.path === '/listing_subsidiary') ? 'active': ''")
                                    router-link(to='/listing_subsidiary') Subsidiary
                li(v-bind:class="(this.$route.path === '/journal_voucher') ? 'active': ''")
                    a(href='javascript:void(0)')
                        .item-content
                            .item-media
                                img.icon-media(src='/assets/images/icons/transaction.png')
                            .item-inner
                                span.title Transaction Files
                                i.icon-arrow
                    ul.sub-menu
                        li(v-bind:class="(this.$route.path === '/journal_voucher') ? 'active': ''")
                            router-link(to='/journal_voucher')
                                span Journal Voucher
                li(v-if="admin" v-bind:class="(this.$route.path === '/post_unpost') ? 'active': ''")
                    a(href='javascript:void(0)')
                        .item-content
                            .item-media
                                img.icon-media(src='/assets/images/icons/process.png')
                            .item-inner
                                span.title Process
                                i.icon-arrow
                    ul.sub-menu
                        li
                            router-link(to='/post_unpost')
                                span Post/Unpost
                li(v-bind:class="(this.$route.path === '/detailed_ledger' || this.$route.path === '/balance_sheet/list_control') ? 'active open': ''")
                    a(href='javascript:void(0)')
                        .item-content
                            .item-media
                                img.icon-media(src='/assets/images/icons/reports.png')
                            .item-inner
                                span.title M.I.S Reports
                                i.icon-arrow
                    ul.sub-menu
                        li
                            a(href='javascript:void(0)')
                                span Trial Balance
                                i.icon-arrow
                            ul.sub-menu
                                li
                                    a(href='#') Control
                                li
                                    a(href='#') Sub Control
                                li
                                    a(href='#') Subsidiary
                        li(v-bind:class="(this.$route.path === '/balance_sheet/list_control') ? 'active open': ''")
